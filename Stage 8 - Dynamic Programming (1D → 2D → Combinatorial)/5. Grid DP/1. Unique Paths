

class Solution {
    public int uniquePaths(int m, int n) {
        return countUniquePaths(m-1, n-1);
    }
    private int countUniquePaths(int i, int j){
        //base;
        if(i < 0 || j < 0){
            return 0;
        }
        if(i == 0 && j == 0){
            return 1;
        }

        //up
        int up = countUniquePaths(i-1, j);

        //left
        int left = countUniquePaths(i, j-1);
        
        return up + left;

    }
}
